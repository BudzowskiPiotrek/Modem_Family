<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Persona 5 Styled Button -->
    <style name="PersonaButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/p5_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:elevation">8dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Persona 5 Title Text -->
    <style name="PersonaTitle">
        <item name="android:textColor">@color/p5_red</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:shadowColor">@color/p5_black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>
    
    <!-- Persona 5 Section Title -->
    <style name="PersonaSectionTitle">
        <item name="android:textColor">@color/p5_white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:background">@color/p5_red</item>
        <item name="android:padding">20dp</item>
        <item name="android:elevation">6dp</item>
    </style>
    
    <!-- Persona 5 Body Text -->
    <style name="PersonaBodyText">
        <item name="android:textColor">@color/p5_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:textColorLink">@color/p5_red</item>
    </style>
    
    <!-- Persona 5 Subtitle -->
    <style name="PersonaSubtitle">
        <item name="android:textColor">@color/p5_light_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
</resources>
