<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/p5_bg_primary"
    android:padding="24dp">

    <!-- Banner rojo superior estilo Persona 5 -->
    <View
        android:id="@+id/topBanner"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:background="@color/p5_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Language selector button -->
    <TextView
        android:id="@+id/btnLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŒ"
        android:textSize="32sp"
        android:textColor="@color/p5_red"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:elevation="8dp"
        android:background="@color/p5_bg_primary"
        app:layout_constraintTop_toBottomOf="@id/topBanner"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tvTitle"
        style="@style/PersonaTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MODEM FAMILY"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        android:paddingEnd="56dp"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/topBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LÃ­nea decorativa -->
    <View
        android:id="@+id/decorLine"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/p5_red"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        style="@style/PersonaSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textAllCaps="true"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/decorLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnIntroduccion"
                style="@style/PersonaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="true"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/p5_red"/>

            <Button
                android:id="@+id/btnLogin"
                style="@style/PersonaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="true"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/p5_dark_red"/>

            <Button
                android:id="@+id/btnMenu"
                style="@style/PersonaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="true"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/p5_red"/>

            <Button
                android:id="@+id/btnCorreos"
                style="@style/PersonaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="true"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/p5_dark_red"/>

            <Button
                android:id="@+id/btnCrud"
                style="@style/PersonaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="true"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/p5_red"/>

            <Button
                android:id="@+id/btnFtp"
                style="@style/PersonaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="true"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/p5_dark_red"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
