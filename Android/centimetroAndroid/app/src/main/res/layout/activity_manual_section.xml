<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/p5_bg_primary">

    <!-- Banner rojo superior -->
    <View
        android:id="@+id/bannerTop"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@color/p5_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Título de la sección -->
    <TextView
        android:id="@+id/tvSectionTitle"
        style="@style/PersonaSectionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textAllCaps="true"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bannerTop" />

    <!-- ProgressBar para cargar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/p5_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView con contenido -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        android:background="@color/p5_bg_secondary"
        app:layout_constraintBottom_toTopOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSectionTitle">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Imagen de la sección (opcional) -->
            <ImageView
                android:id="@+id/ivSectionImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                android:contentDescription="Imagen del manual"/>

            <!-- Contenido de texto -->
            <TextView
                android:id="@+id/tvSectionContent"
                style="@style/PersonaBodyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="8dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Botón volver -->
    <Button
        android:id="@+id/btnBack"
        style="@style/PersonaButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text=""
        android:textAllCaps="true"
        android:backgroundTint="@color/p5_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
